<% layout("layout/boilerplate.ejs") %>

<style>

.chatRoom{
    display: flex;
    height: 100vh;
}

.users{
    border: 1px solid black;
    flex: 30%;
    text-decoration: none;
    color: black;
}

.realTimeChats{
    border: 1px solid black;
    flex: 70%;
    position: relative;
    /* height: 100%; */
}

.mar{
    margin: 0rem;
}

input{
    margin: 0.6rem;
    width: 65% !important;
}


#btt{
    display:  inline-block !important;
}

.sendBox{
    display: flex;
    width: 100%;
    align-items: center;
    background-color: white;
    position: absolute;
    bottom: 0px;
    right: 0;
    left: 0;

}

#btt1{
    height: 80%;
    flex: 90%;
}
#snd{
    flex: 10%;
    height: 80%;
    border: none !important;
    background-color: lightblue;
}

.frnd{
    height: 5rem;
    
    padding: 0.5rem;
    display: flex;
    justify-content: space-around;
    align-items: center;
    border-bottom: 1px solid black;
}
.frnd:hover{
    cursor: pointer;
    opacity: 0.8;
}
.userImg{
    height: 80%;
    width: 4rem;
    border-radius:50% ;
    border: none;
}
.userImg img{
    height: 100%;
    width: 100%;
    object-fit: contain;
    border-radius:50% ;

}
#messages{
    display: block;
    height: 90%;
    overflow-y: scroll;
}

.fl{
    display: flex;
    align-items: center;
}
.sp1{
    background-color: lightblue;
    padding: 0.5rem;
    border-radius: 4px;
}
.sp2{
    background-color: lightgray;
    padding: 0.5rem;
    border-radius: 4px;

}


</style>

<div class="chatRoom" id="<%= data._id %>">

    <div class="users">

        <!-- <form action="/searchUser" method="get">
            <input class="form-control"  id="btt" type="search" name="search"><button class="btn btn-success">search</button>
        </form> -->
    
        <% for(user of ans ){%>
        <a  onclick="fun('<%= user._id %>')">
            <div class="frnd">
                <div class="userImg">
                    <img src=<%= user.pic %> alt="">
                </div>
                <p> <%= user.username.username  %> </p>
                <!-- <p><%= user._id  %></p> -->

            </div>
        </a>

            <% } %>

    </div>

    <div class="realTimeChats">

        <ul id="messages"></ul>


       <div class="sendChats">
           
        <form action="" class="frm">
        <div class="sendBox">
            <input class="form-control msgBox"  id="btt1" type="search" name="search"><button id="snd" class="btn"><i class="fa-regular fa-paper-plane"></i></button>
    
        </div>
    </form>

       </div>

    </div>

    
</div>
<script src="/socket.io/socket.io.js"></script>
<script>

const socket = io();
// const mongoose = require('mongoose');


let user=document.querySelector('.chatRoom');
let frm=document.querySelector('.frm');
let inp=document.querySelector('.msgBox'); 
let div=document.querySelector('.sendBox');
let msg=document.querySelector('#messages');

window.onload = function() {
    // console.log("hello",user.id);
    // Send the username to the server by emitting a 'register' event

    socket.emit('register', user.id);
};




frm.addEventListener('submit',(e)=>{
    e.preventDefault();
    // console.log(div.id);
    socket.emit('chat mess',{from:user.id,to:div.id,mess:inp.value});
    console.log(inp.value);
    inp.value='';

})


socket.on('chat mess',(mess)=>{
    
    const item = document.createElement('li');
    item.classList.add('fl');
    const sp= document.createElement('span');

    sp.textContent = mess.message;
    item.append(sp);
    console.log("hei");


    if(div.id==mess.from){
        item.style.justifyContent='flex-start'; 
        sp.classList.add('sp1')

       }else{
        item.style.justifyContent='flex-end'
        sp.classList.add('sp2')

    }


    messages.append(item);
    // messages.append();

    window.scrollTo(0, document.body.scrollHeight);

})



    function fun(id){
        div.setAttribute('id',id);
        msg.innerHTML='';
        axios.get(`/getChats/${id}/${user.id}`)
        .then((res)=>{
            let chats=res.data.chats;
             for( let chat of chats){
                console.log(chat.content);
    const item = document.createElement('li');
    item.classList.add('fl');
    const sp= document.createElement('span');

    sp.textContent = chat.content;
    item.append(sp);


    if(id==chat.sender._id){
        item.style.justifyContent='flex-start'; 
        sp.classList.add('sp1')

       }else{
        item.style.justifyContent='flex-end'
        sp.classList.add('sp2')

    }
    messages.append(item);
    // messages.append();



             }
        })
        .catch((err)=>{
            console.log(err.message);
        })
        
    }
    
</script>