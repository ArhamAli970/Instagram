    <title>Document</title>
</head>
<style>
    body{height: 100vh;}
    .log{
        display: flex;
        height: 100%;
    }
    .img1,.signForm{
 /* border: 1px solid black; */
       flex: 50%;
       display: flex;
        justify-content: center;
        align-items: center;
    }
    img{height: 100%;
    width: 100%;
object-fit: cover;
}
    form{
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    input{
        width: 100% !important;
    }
    .signBt{
        width: 70% !important;
    }
   

</style>
<body>
    

        <% if(error.length!=0){ %>
            <%=error %>
                    <% } %>

    <div class="log">

        <div class="img1">
            <img src="https://images.pexels.com/photos/15353506/pexels-photo-15353506/free-photo-of-top-view-of-man-sitting-at-a-table-and-using-a-laptop.jpeg?auto=compress&cs=tinysrgb&w=600" alt="lapo">
        </div>

        <div class="signForm">
            <form method="post" action="/login">
                <div class="mb-3">
                    <label for="username" class="form-label">Username</label>
                    <input type="text" class="form-control" id="username" name="username" required>
                  <!-- <div id="emailHelp" class="form-text">We'll never share your email with anyone else.</div> -->
                </div>
                <div class="mb-3">
                    <label for="password" class="form-label">Password</label>
                    <input type="password" class="form-control" id="password" name="password" required>
                </div>
          
                <button type="submit" class="signBt btn btn-primary">Login</button>
              </form>
        </div>

    </div>
    

</body>
</html>