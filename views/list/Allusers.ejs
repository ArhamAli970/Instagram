<% layout("layout/boilerplate.ejs") %>

<style>
    .kanPost{
        display: flex;
        flex-direction: column;
        align-items: center;
    }
    .userFoll{
        display: flex;
        width: 60%;
        padding: 1rem;
        justify-content: space-evenly;
        align-items: center;
        border: 1px solid black;
        border-radius:1rem ;
        
    }
    .userProf{
        display: flex;
        width: 30%;
        flex-direction: column;
        align-items: center;
        /* justify-content: space-between; */
       
        /* border: 0.3px solid black; */
    }
    .userProf p{
        /* justify-self: flex-start; */
    }
    .userpc{
 width: 2rem;
        height: 2rem;
     border-radius: 50%; 
    }
    .userProf img{
        border-radius: 50%;
        height: 100%;
