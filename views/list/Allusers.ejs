 <div class="kanPost ">

    <% for(us of allAcc) { %>

           <% if(!user._id.equals(us.username._id)){ %> 
        <div class="userFoll ">
            
            <div class="userProf">
                <div class="userpc">
                  <img src="<%= us.pic  %>" alt="">
                </div>
                <!-- &nbsp; &nbsp; &nbsp; &nbsp; -->
                <div> <%= us.username.username  %></div>
            
            </div>

            

            <div class="followBut">
                <form action="/follow/<%= us._id %>" method="post">
                <button class="btn btn-primary">Follow</button>
               </form>
            </div>

        </div>

        <br>
        <% } %>
        <% } %>
 </div>